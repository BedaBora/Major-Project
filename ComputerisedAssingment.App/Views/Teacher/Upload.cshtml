@using ComputerisedAssingment.ModelEntity
@model ComputerisedAssingment.ModelView.TeacherUploadVM
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{

    var session = @HttpContextAccessor.HttpContext.Session.GetString("LoginCredUniqueId");
    ViewData["Title"] = "Upload";
    Layout = "~/Views/Shared/_Layout_Users.cshtml";
}

<div class="container-fluid" style="margin-top: 8%;">
    <div class="row justify-content-center">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body row">
                    <div class="col-md-4" style="border-right: 1px solid rgba(0,0,0,.125);">
                        <div class="col-md-6 offset-md-4">
                            <br />
                            <a asp-area="" asp-controller="Teacher" asp-action="Upload">
                                Upload
                                <br />
                                <br />
                            </a>
                            <a asp-area="" asp-controller="Teacher" asp-action="View">
                                View
                                <br />
                                <br />
                            </a>
                            <a asp-area="" asp-controller="Teacher" asp-action="Submitted">
                                Submitted
                                <br />
                                <br />
                            </a>
                            <a asp-area="" asp-controller="Teacher" asp-action="Students">
                                Students
                            </a>
                        </div>
                    </div>

                    <div class="col-md-8">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "", role = "form", @enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" id="TeacherUniqueId" class="TeacherUniqueId" name="TeacherUniqueId" required = "required" value="@session.Trim('"')">
                            <div class="form-group row">
                                @Html.LabelFor(m => m.Title, new { @class = "col-md-4 col-form-label " })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control", @required = "required" })
                                    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(m => m.Upload_file, new { @class = "col-md-4 col-form-label " })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.Upload_file, new { @class = "form-control", @required = "required", @type = "file" })
                                    @Html.ValidationMessageFor(m => m.Upload_file, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group row">
                                @Html.LabelFor(m => m.Deadline, new { @class = "col-md-4 col-form-label " })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(m => m.Deadline, new { @class = "form-control", @required = "required", @type = "date" })
                                    @Html.ValidationMessageFor(m => m.Deadline, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6 offset-md-4">
                                <button type="submit" class="btn btn-primary">
                                    Submit
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
 